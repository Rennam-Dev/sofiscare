{%- comment -%}
  Hero SofisCare - CSS carregado via sofiscare-global.css
  Apenas estilos dinamicos (variaveis de section) aqui
{%- endcomment -%}

{%- style -%}
  #Hero-{{ section.id }} .hero-sofiscare__content {
    text-align: {{ section.settings.desktop_text_alignment }};
  }
  #Hero-{{ section.id }} .hero-sofiscare__ctas {
    justify-content: {{ section.settings.desktop_text_alignment }};
  }
  #Hero-{{ section.id }} .hero-sofiscare__trust {
    justify-content: {{ section.settings.desktop_text_alignment }};
  }
  #Hero-{{ section.id }}.hero-sofiscare--fullwidth .hero-sofiscare__content {
    background: rgba(var(--color-background), {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }
  @media screen and (min-width: 990px) {
    #Hero-{{ section.id }}.hero-sofiscare--fullwidth .hero-sofiscare__content {
      background: transparent;
    }
  }
{%- endstyle -%}

<section
  class="hero-sofiscare color-{{ section.settings.color_scheme }} gradient{% if section.settings.layout == 'image_first' %} hero-sofiscare--reverse{% endif %}{% if section.settings.layout == 'fullwidth' %} hero-sofiscare--fullwidth{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
  id="Hero-{{ section.id }}"
>
  <div class="hero-sofiscare__content hero-sofiscare__content--{{ section.settings.desktop_text_alignment }}">
    {%- if section.settings.badge != blank -%}
      <span class="hero-sofiscare__badge">{{ section.settings.badge }}</span>
    {%- endif -%}

    {%- if section.settings.headline != blank -%}
      <h1 class="hero-sofiscare__headline">
        {{ section.settings.headline }}
      </h1>
    {%- endif -%}

    {%- if section.settings.subheadline != blank -%}
      <p class="hero-sofiscare__subheadline">
        {{ section.settings.subheadline }}
      </p>
    {%- endif -%}

    <div class="hero-sofiscare__ctas">
      {%- if section.settings.cta_primary_text != blank -%}
        <a
          href="{{ section.settings.cta_primary_link }}"
          class="hero-sofiscare__cta hero-sofiscare__cta--primary"
          {% if section.settings.cta_primary_link == blank %}role="link" aria-disabled="true"{% endif %}
        >
          {{ section.settings.cta_primary_text }}
        </a>
      {%- endif -%}

      {%- if section.settings.cta_secondary_text != blank -%}
        <a
          href="{{ section.settings.cta_secondary_link }}"
          class="hero-sofiscare__cta hero-sofiscare__cta--secondary"
          {% if section.settings.cta_secondary_link == blank %}role="link" aria-disabled="true"{% endif %}
        >
          {{ section.settings.cta_secondary_text }}
        </a>
      {%- endif -%}
    </div>

    {%- if section.settings.show_trust_badges -%}
      <div class="hero-sofiscare__trust">
        {%- for block in section.blocks -%}
          {%- if block.type == 'trust_badge' -%}
            <div class="hero-sofiscare__trust-item" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <span class="hero-sofiscare__trust-icon">{{ block.settings.icon }}</span>
              {%- endif -%}
              <span>{{ block.settings.text }}</span>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>

  <div class="hero-sofiscare__media">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 1920
        | image_tag:
          class: 'hero-sofiscare__image',
          loading: 'eager',
          fetchpriority: 'high',
          sizes: '(min-width: 990px) 50vw, 100vw',
          widths: '375, 550, 750, 1100, 1500, 1920'
      }}
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-sofiscare__image placeholder-svg' }}
    {%- endif -%}
    <div class="hero-sofiscare__image-overlay"></div>
  </div>
</section>

