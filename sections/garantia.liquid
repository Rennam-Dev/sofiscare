{%- style -%}
  /* ============================================
     GARANTIA - Estilos Base
     ============================================ */

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ============================================
     CARD PRINCIPAL
     ============================================ */

  .garantia-sofiscare {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    padding: 2.5rem 2rem;
    border-radius: 20px;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .garantia-sofiscare {
      padding: 3.5rem 3rem;
    }
  }

  .garantia-sofiscare:hover {
    transform: scale(1.01);
  }

  /* Variante com borda */
  .garantia-sofiscare--bordered {
    border: 2px solid rgba(var(--color-foreground), 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .garantia-sofiscare--bordered:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  /* Variante com fundo destacado */
  .garantia-sofiscare--highlight {
    background: linear-gradient(135deg, rgba(var(--color-button), 0.05) 0%, rgba(var(--color-button), 0.02) 100%);
  }

  /* ============================================
     BADGE SUPERIOR
     ============================================ */

  .garantia-sofiscare__badge {
    display: inline-block;
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    padding: 0.4rem 1.25rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.5rem;
  }

  /* ============================================
     √çCONE / SELO
     ============================================ */

  .garantia-sofiscare__icon-wrapper {
    margin-bottom: 1.5rem;
  }

  .garantia-sofiscare__icon {
    font-size: 4rem;
    line-height: 1;
    display: inline-block;
    animation: pulse-gentle 3s ease-in-out infinite;
  }

  @media screen and (min-width: 750px) {
    .garantia-sofiscare__icon {
      font-size: 5rem;
    }
  }

  .garantia-sofiscare__icon-image {
    width: 100px;
    height: 100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .garantia-sofiscare__icon-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  /* √çcone SVG estilizado */
  .garantia-sofiscare__shield-svg {
    width: 80px;
    height: 80px;
    color: rgb(var(--color-button));
  }

  @media screen and (min-width: 750px) {
    .garantia-sofiscare__shield-svg {
      width: 100px;
      height: 100px;
    }
  }

  @keyframes pulse-gentle {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  /* ============================================
     CONTE√öDO
     ============================================ */

  .garantia-sofiscare__title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .garantia-sofiscare__days {
    color: rgb(var(--color-button));
  }

  .garantia-sofiscare__description {
    font-size: clamp(1rem, 2vw, 1.1rem);
    line-height: 1.7;
    opacity: 0.85;
    max-width: 580px;
    margin: 0 auto 1.5rem;
  }

  /* ============================================
     BULLETS
     ============================================ */

  .garantia-sofiscare__bullets {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem 2rem;
    margin: 1.5rem 0;
    padding: 0;
    list-style: none;
  }

  .garantia-sofiscare__bullet {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .garantia-sofiscare__bullet-icon {
    color: #10b981;
    font-size: 1.1rem;
    flex-shrink: 0;
  }

  /* ============================================
     CTA
     ============================================ */

  .garantia-sofiscare__cta {
    margin-top: 2rem;
  }

  .garantia-sofiscare__button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .garantia-sofiscare__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(var(--color-button), 0.3);
  }

  .garantia-sofiscare__button--secondary {
    background: transparent;
    border: 2px solid rgb(var(--color-button));
    color: rgb(var(--color-button));
  }

  .garantia-sofiscare__button--secondary:hover {
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }

  /* ============================================
     DECORA√á√ÉO
     ============================================ */

  .garantia-sofiscare__decoration {
    position: absolute;
    top: -10px;
    right: -10px;
    background: #10b981;
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  @media screen and (max-width: 749px) {
    .garantia-sofiscare__decoration {
      width: 50px;
      height: 50px;
      font-size: 1.25rem;
      top: -8px;
      right: -8px;
    }
  }

  /* ============================================
     SELO DE CONFIAN√áA INFERIOR
     ============================================ */

  .garantia-sofiscare__trust {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
    opacity: 0.7;
    font-size: 0.85rem;
  }

  .garantia-sofiscare__trust-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  /* ============================================
     ANIMA√á√ïES
     ============================================ */

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .garantia-sofiscare.scroll-trigger.animate--slide-in {
    animation: fadeInUp 0.6s ease forwards;
  }
{%- endstyle -%}

